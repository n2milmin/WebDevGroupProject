
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Booking Start
            </th>
            <th>
                Booking End
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>
                    @booking.Title
                </td>
                <td>
                    @booking.Description
                </td>
                <td>
                    @booking.Price
                </td>
                <td>
                    @booking.BookingStart.ToShortDateString()
                </td>
                <td>
                    @booking.BookingEnd.ToShortDateString()
                </td>
            </tr>
        }

    </tbody>
</table>
<p>
    <a class="btn btn-primary" asp-area="" asp-action="Create">Book</a>
</p>