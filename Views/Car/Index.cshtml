@model IEnumerable<WebDevGroupProject.Models.CarRental>

@{
    ViewBag.Title = "Car Rentals";
}

<h2>Car Rentals</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Availability)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pricing)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pricing)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.RentalsId" class="btn btn-info">Details</a>
                <a asp-controller="Booking" asp-action="BookCar" asp-route-id="@item.RentalsId" class="btn btn-info">Book Car</a>
            </td>
        </tr>
    }
</table>

<a class="btn btn-primary" asp-area="" asp-controller="Car" asp-action="Create">Add a Car</a>